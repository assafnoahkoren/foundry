# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=13001
POSTGRES_DB=foundry
POSTGRES_USER=foundry_user
POSTGRES_PASSWORD=foundry_password
DATABASE_URL=postgresql://foundry_user:foundry_password@localhost:13001/foundry

# Server
SERVER_PORT=13002
NODE_ENV=development

# Security
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=7d

# Application
APP_NAME=Foundry
APP_URL=http://localhost:13002
CLIENT_URL=http://localhost:13003

# Client (VITE_ prefix for client-side access)
VITE_CLIENT_PORT=13003
VITE_SERVER_URL=http://localhost:13002
VITE_CLIENT_URL=http://localhost:13003
VITE_APP_NAME=Foundry

# Mail Service (SMTP)
MAIL_FROM_EMAIL=noreply@foundry.local
MAIL_FROM_NAME=Foundry App
MAIL_HOST=localhost
MAIL_PORT=13004
# MAIL_SECURE=true              # Set to true for port 465, false for other ports
# MAIL_USER=                    # SMTP username (leave empty for Mailhog)
# MAIL_PASS=                    # SMTP password (leave empty for Mailhog)

# Production SMTP Example (Gmail):
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_SECURE=false
# MAIL_USER=your-email@gmail.com
# MAIL_PASS=your-app-specific-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=13007
REDIS_PASSWORD=foundry_redis_password

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_RATE_LIMIT_MAX=100
QUEUE_RATE_LIMIT_DURATION=60000

# Worker Configuration
WORKER_CONCURRENCY=10
EMAIL_WORKER_CONCURRENCY=5

# Bull Board Configuration
ENABLE_BULL_BOARD=true          # Enable Bull Board UI (set to false in production)
# BULL_BOARD_USERNAME=admin     # Optional: Basic auth username
# BULL_BOARD_PASSWORD=password  # Optional: Basic auth password

# Queue System Configuration
INITIALIZE_QUEUE_SYSTEM=true    # Initialize queue system on web server startup (set to false if running separate workers)